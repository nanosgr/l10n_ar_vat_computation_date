<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n.ar.vat.computation.date</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='default_accounts']" position="inside">
                <setting
                    id="l10n_ar_vat_credit_accounts"
                    string="VAT Credit Deferred Computation"
                    invisible="country_code != 'AR'"
                    help="Configure accounts for VAT credit computation in locked periods (Argentina)"
                >
                    <div class="content-group">
                        <div class="row mt16">
                            <label
                                for="l10n_ar_vat_credit_account_id"
                                string="VAT Credit Account"
                                class="col-lg-4 o_light_label"
                            />
                            <field
                                name="l10n_ar_vat_credit_account_id"
                                class="oe_inline"
                                options="{'no_create': True}"
                            />
                        </div>
                        <div class="row">
                            <label
                                for="l10n_ar_vat_credit_to_compute_account_id"
                                string="VAT Credit To Compute Account"
                                class="col-lg-4 o_light_label"
                            />
                            <field
                                name="l10n_ar_vat_credit_to_compute_account_id"
                                class="oe_inline"
                                options="{'no_create': True}"
                            />
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
